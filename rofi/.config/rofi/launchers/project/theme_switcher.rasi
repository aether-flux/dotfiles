///////////////////////////////



/*****----- Configuration -----*****/
configuration {
    drun-display-format: "{name}";
}

/*****----- Global Styles -----*****/
* {
    font: "GeistMono Nerd Font 12";
    text-color: #d3c6aa;
    background-color: rgba(43, 51, 57, 1);  // Everforest bg0 with transparency
    border: 0px;
    padding: 0;
    spacing: 0;
}

/*****----- Window -----*****/
window {
    transparency: "real";
    blur: true;
    padding: 10px;
    width: 500px;
    // height: 515px;
    border-radius: 20px;
}

/*****----- Layout -----*****/
mainbox {
    padding: 5px;
    children: [inputbar, listview];
    spacing: 15px;
    border-radius: 15px;
}

inputbar {
    children: [entry];
    background-color: rgba(67, 76, 84, 0.8);  // Everforest bg2-ish
    border-radius: 7px;
    padding: 6px 12px;
}

entry {
    expand: true;
    text-color: #d3c6aa;
    background-color: transparent;
    cursor: text;
    placeholder: "Select Theme...";
    placeholder-color: #859289;
}

listview {
    lines: 12;
    dynamic: true;
    fixed-height: false;
    scrollbar: false;
    padding: 0;
    border-radius: 10px;
    spacing: 4px;
}

/*****----- Elements -----*****/
element {
    padding: 10px;
    border-radius: 4px;
    background-color: transparent;
    horizontal-align: 0.5;
}

element-icon {
  size: 0;
}

element-text {
    background-color: transparent;
    vertical-align: 0.5;
    text-color: #d3c6aa;
}

element selected {
    background-color: rgba(167, 192, 128, 0.2);  // Green highlight
    text-color: #d3c6aa;
}

